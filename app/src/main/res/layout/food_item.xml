<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp"
    android:id="@+id/ll_food_item">

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/foodItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:text="Apples"/>
            <TextView
                android:id="@+id/foodAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Amount: 3Kgs"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Expiry Date: 10/mm/yy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Buy Date: 10/mm/yy"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddSubtract"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/subtract_item"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:cropToPadding="true"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:src="@drawable/subtract_icon"/>

            <TextView
                android:id="@+id/food_count_track"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="3"/>

            <ImageView
                android:id="@+id/add_item"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/add_icon_round"/>
        </LinearLayout>

    </LinearLayout>